<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.DetailActivity"
    tools:showIn="@layout/activity_detail">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:baselineAligned="false"
            android:id="@+id/following_container"
            android:background="@drawable/custom_border_b">

            <LinearLayout
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:gravity="center"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:background="@drawable/sharp_rect_fill"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/title_following"
                    android:textColor="@color/grayFeather"
                    android:textSize="18sp"/>
                <TextView
                    android:id="@+id/tvFollowing"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textSize="24sp"
                    android:text="@string/following_placeholder"
                    android:textColor="#fff"/>
            </LinearLayout><!--following-->

            <LinearLayout
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:gravity="center"
                android:paddingTop="10dp"
                android:background="@drawable/sharp_rect_fill"
                android:paddingBottom="10dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/title_followers"
                    android:textColor="@color/grayFeather"
                    android:textSize="18sp"/>
                <TextView
                    android:id="@+id/tvFollowers"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textColor="#fff"
                    android:text="@string/followers_placeholder"
                    android:textSize="24sp" />
            </LinearLayout><!--followers-->
        </LinearLayout> <!--FOLLOWING DATA-->

        <LinearLayout
            android:id="@+id/user_detail_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/custom_border_b"
            android:baselineAligned="false"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/name_item"
                android:orientation="horizontal"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:baselineAligned="false"
                android:paddingTop="10dp"
                android:paddingBottom="10dp">

                <TextView
                    android:id="@+id/name_field"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/title_name"
                    android:textColor="#000"
                    android:textSize="16sp"
                    android:visibility="visible"
                    android:layout_gravity="start"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp" />

                <TextView
                    android:id="@+id/tvName"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:textAlignment="viewEnd"
                    android:layout_gravity="end"
                    android:text="@string/name_placeholder"
                    android:textSize="16sp"
                    android:paddingEnd="15dp"
                    android:paddingStart="0dp" />
            </LinearLayout> <!--name-->


            <LinearLayout
                android:id="@+id/user_detail_item"
                android:orientation="horizontal"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:baselineAligned="false"
                android:paddingTop="10dp"
                android:paddingBottom="10dp">

                <TextView
                    android:id="@+id/username_field"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/title_username"
                    android:textColor="#000"
                    android:textSize="16sp"
                    android:visibility="visible"
                    android:layout_gravity="start"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp" />

                <TextView
                    android:id="@+id/tvUserName"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:textAlignment="viewEnd"
                    android:layout_gravity="end"
                    android:text="@string/username_placeholder"
                    android:textSize="16sp"
                    android:paddingEnd="15dp"
                    android:paddingStart="0dp" />
            </LinearLayout> <!--username-->

            <LinearLayout
                android:orientation="horizontal"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:baselineAligned="false"
                android:paddingTop="10dp"
                android:paddingBottom="10dp">

                <TextView
                    android:id="@+id/org_field"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="#000"
                    android:textSize="17sp"
                    android:visibility="visible"
                    android:layout_gravity="start"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:text="@string/title_company" />

                <TextView
                    android:id="@+id/tvCompany"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="@string/company_placeholder"
                    android:textAlignment="viewEnd"
                    android:layout_gravity="end"
                    android:paddingStart="0dp"
                    android:textSize="16sp"
                    android:paddingEnd="15dp" />
            </LinearLayout> <!-- company -->

            <LinearLayout
                android:orientation="horizontal"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:baselineAligned="false"
                android:paddingTop="10dp"
                android:paddingBottom="10dp">

                <TextView
                    android:id="@+id/repo_field"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="#000"
                    android:textSize="17sp"
                    android:layout_gravity="start"
                    android:paddingStart="15dp"
                    android:paddingEnd="0dp"
                    android:text="@string/title_repos" />

                <TextView
                    android:id="@+id/tvRepos"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="@string/repos_placeholder"
                    android:textAlignment="viewEnd"
                    android:layout_gravity="end"
                    android:paddingStart="0dp"
                    android:textSize="16sp"
                    android:paddingEnd="15dp" />
            </LinearLayout> <!-- repos -->
        </LinearLayout> <!-- USER DETAILS -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/title_bio"
                android:textColor="#000"
                android:textSize="18sp"
                android:gravity="center"
                />

            <TextView
                android:id="@+id/tvBio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:textSize="16sp" />
        </LinearLayout>
    </LinearLayout>

</android.support.constraint.ConstraintLayout>
